From 7a8d64e65c03936343c86420f0a801fdb92533f6 Mon Sep 17 00:00:00 2001
From: Mirko Ardinghi <mirko.ardinghi@engicam.com>
Date: Wed, 17 Aug 2016 12:01:12 +0200
Subject: [PATCH] fine

---
 arch/arm/Kconfig                      |  1 -
 arch/arm/Makefile                     |  2 +-
 arch/arm/boot/dts/imx6sx-icore-m4.dts | 12 ++++++++++++
 arch/arm/mach-imx/Makefile.boot       |  1 +
 4 files changed, 14 insertions(+), 2 deletions(-)
 create mode 100644 arch/arm/mach-imx/Makefile.boot

diff --git a/arch/arm/Kconfig b/arch/arm/Kconfig
index af00d12..de2e2e2 100644
--- a/arch/arm/Kconfig
+++ b/arch/arm/Kconfig
@@ -308,7 +308,6 @@ config ARCH_MULTIPLATFORM
 	bool "Allow multiple platforms to be selected"
 	depends on MMU
 	select ARM_PATCH_PHYS_VIRT
-	select AUTO_ZRELADDR
 	select COMMON_CLK
 	select MULTI_IRQ_HANDLER
 	select SPARSE_IRQ
diff --git a/arch/arm/Makefile b/arch/arm/Makefile
index 08a9ef5..d120806 100644
--- a/arch/arm/Makefile
+++ b/arch/arm/Makefile
@@ -235,7 +235,7 @@ else
 MACHINE  :=
 endif
 ifeq ($(CONFIG_ARCH_MULTIPLATFORM),y)
-MACHINE  :=
+MACHINE  := arch/arm/mach-imx
 endif
 
 machdirs := $(patsubst %,arch/arm/mach-%/,$(machine-y))
diff --git a/arch/arm/boot/dts/imx6sx-icore-m4.dts b/arch/arm/boot/dts/imx6sx-icore-m4.dts
index dd382b9..b5e9912 100644
--- a/arch/arm/boot/dts/imx6sx-icore-m4.dts
+++ b/arch/arm/boot/dts/imx6sx-icore-m4.dts
@@ -8,6 +8,18 @@
 
 #include "imx6sx-icore.dts"
 
+/{
+	memory {
+		linux,usable-memory = <0x81000000 0xef00000>;
+		reg = <0x81000000 0xf000000>;
+	};
+};
+
+&iomuxc {
+	pinctrl-names = "default";
+	pinctrl-0 = <&pinctrl_hog>;
+};
+
 /*
  * The flollowing modules are conflicting with M4, disable them when m4
  * is running.
diff --git a/arch/arm/mach-imx/Makefile.boot b/arch/arm/mach-imx/Makefile.boot
new file mode 100644
index 0000000..271d0d7
--- /dev/null
+++ b/arch/arm/mach-imx/Makefile.boot
@@ -0,0 +1 @@
+zreladdr-y := 0x81008000
-- 
